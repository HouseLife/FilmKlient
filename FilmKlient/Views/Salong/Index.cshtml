@model IEnumerable<FilmKlient.Models.Salong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>

<body>
    <p>
        @Html.ActionLink("Skapa ny Salong", "Create", null, new { @class = "btn btn-danger btn-large" })


    </p>


    <div class="raw">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Namn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.platser)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Namn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.platser)
                    </td>
                    <td>

                        @Html.ActionLink("Redigera", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-large" })
                        @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })
                        @Html.ActionLink("Ta bort   ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-large" })
                    </td>
                </tr>
            }

        </table>
        </div>
</body>
</html>
