@model IEnumerable<FilmKlient.Models.Film>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<html>
<head>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>

<body>
    <p>
        @Html.ActionLink("Skapa ny film", "Create", null, new { @class = "btn btn-danger btn-large" })


    </p>


    <div class="raw">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speltid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aldergrans)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Beskrivning)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Utgivningsdatum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sprak)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Huvudregissor)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Speltid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aldergrans)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beskrivning)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Utgivningsdatum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sprak)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Huvudregissor)
                    </td>
                    <td>

                        @Html.ActionLink("Redigera", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-large" })
                        @Html.ActionLink("Detaljer", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-large" }) 
                        @Html.ActionLink("Ta bort   ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-large" })
                    </td>
                </tr>
            }

        </table>

    </div>

</body>
</html>